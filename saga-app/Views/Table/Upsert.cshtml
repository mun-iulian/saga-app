@model saga_app.Models.TableModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="Upsert" asp-route-id="@Model.Id" onsubmit="return tablePost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Field1" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Field1" class="form-control" />
                </div>
                <span asp-validation-for="Field1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Field2" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Field2" class="form-control" />
                </div>
                <span asp-validation-for="Field2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Field3" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Field3" class="form-control" />
                </div>
                <span asp-validation-for="Field3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Submit" class="btn btn-primary btn-block" />
                </div>
            </div>
        </form>
    </div>
</div>
